<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                @if (Document.ContainsKey("Canonical"))
                {
                    <p class="text-center small text-muted">Originally published at <a
                            href="@Document.GetString("Canonical")">@Document.GetString("Canonical")</a>.</p>
                    <br />
                }
                <p class="copyright text-muted m-0">@Document.GetString(WebKeys.Copyright) <a
                        href="https://valcodes.ml">#valcodes</a>. All Rights Reserved.</p>
                <br />
                <ul class="list-inline text-center small">
                    @{
                        IDocument rssFeed = Outputs["**/*.rss"].FirstOrDefault();
                        IDocument atomFeed = Outputs["**/*.atom"].FirstOrDefault();
                    }
                    @if (rssFeed != null)
                    {
                        <li class="list-inline-item">
                            <a href="@Context.GetLink(rssFeed)"><i class="fa fa-rss"></i> RSS Feed</a>
                        </li>
                    }
                    @if (atomFeed != null)
                    {
                        <li class="list-inline-item">
                            <a href="@Context.GetLink(atomFeed)"><i class="fa fa-rss"></i> Atom Feed</a>
                        </li>
                    }
                </ul>
                <br />
                <div class="font-weight-bold small" style="padding-top: 1px; padding-bottom: 1px;"><a href="https://statiq.dev">Generated by Statiq</a></div>
                <div style="padding-top: 1px; padding-bottom: 1px;"><a href="https://www.netlify.com/"><img src="/img/netlify-color-bg.svg" alt="Deploy By Netlify"
                        title="Deploy By Netlify"></a></div>
                <div style="padding-top: 1px; padding-bottom: 1px;"><a href="https://validator.w3.org/nu/?doc=https%3A%2F%2Fvalticus.cf%2F"><img src="/img/valid_html.png" alt="W3C Validation Badge" title="W3C Validation Badge" class="align_center"></a></div>
            </div>
        </div>
    </div>
</footer>
